header
    display: block
    position: fixed
    top: 0
    left: 0
    width: 100%
    padding: 20px 30px 0 30px
    background-color: white
    nav
        width: 100%
        max-width: 1280px
        margin-right: auto
        margin-left: auto
        display: block
        height: 60px
        a.brand
            display: inline-block
            float: left
            height: 100%
            vertical-align: middle
            line-height: 60px
            img
                display: inline
                vertical-align: middle
                max-height: 60%
                transform: rotate(-45deg)
            h1
                display: inline
                font-size: font-size-smaller
                margin-left: 10px
                vertical-align: middle
                line-height: 2

        ul.menu
            float: right
            margin-bottom: 0
            li
                height: 60px
                list-style: none
                margin: 0
                display: inline-block
                margin-left: 40px
                vertical-align: middle
                line-height: 60px
                a
                    vertical-align: middle
                    display: inline-block

        a.menubtn
            display: inline-block;
            height: 60px
            line-height: 60px
            vertical-align: middle;
            float: right
            margin-left: 40px
            .burger
                line-height: 0
                vertical-align: middle;
                display: inline-block;
                width: 25px
                font-size: 0
                .line
                    display: inline-block;
                    height: 1px
                    width: 100%
                    background-color: font-color
                    margin-bottom: 7px
                    &:last-child
                        margin-bottom: 0
