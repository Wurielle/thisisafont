.landing-news
    background-color: white
    z-index: 1
    cursor: pointer;
    display: inline-block;
    position: absolute;
    width: -webkit-calc(100% - 590px)
    width: calc(100% - 590px)
    right: 30px
    top: 100%
    &.animate
        &:hover
            .floater
                top: -60px
    .wrapper
        position: relative;
        top: -200px;
    .background-text
        position: absolute;
        color: white
        display: inline-block;
        width: 100%
        height: 200px
        h2
            display: inline-block;
            z-index: 2
            position: absolute;
            top: 50%
            left: 50%
            transform: translate(-50%, -50%);
            margin-bottom: 0
            text-transform: uppercase;
            font-size: font-size-goliath
        .background
            background-color: font-color
            display: inline-block;
            width: 100%
            height: 100%
            position: absolute;
            z-index: -1

    .news-list
        padding: 30px 30px 0 30px
        .floater
            -webkit-column-count: 2;
            -webkit-column-gap: 30px;
            -moz-column-count: 2;
            -moz-column-gap: 30px;
            -o-column-count: 2;
            -o-column-gap: 30px;
            column-count: 2;
            column-gap: 30px;
            top: 0
            position: relative
            display: inline-block;
            -webkit-transition-timing-function: cubic-bezier(.165,.84,.44,1)
            transition-timing-function: cubic-bezier(.165,.84,.44,1)
            -webkit-transition: top 0.4s
            transition: top 0.4s
        .news-col
            margin-bottom: 50px
            width: 100%
            display: inline-block;
        .news-col:first-child
            margin-top: 150px
        .news-item
            font-size: 0
            display: inline-block;
            width: 100%
            &:hover
                .news-img
                    .show
                        opacity: 1
            .news-img
                display: inline-block;
                width: 100%
                margin-bottom: 30px
                position: relative;
                .show
                    opacity: 0
                    -webkit-transition-timing-function: cubic-bezier(.165,.84,.44,1)
                    transition-timing-function: cubic-bezier(.165,.84,.44,1)
                    -webkit-transition: opacity 0.4s
                    transition: opacity 0.4s
                    span
                        padding: 5px 10px
                        border: 2px solid white
                        color: white
                        position: absolute;
                        top: 50%
                        left: 50%
                        transform: translate(-50%, -50%);
                        text-transform: uppercase;
                img
                    width: 100%
            .news-title
                h3
                    font-size: font-size-smaller
                    text-transform: uppercase;
                    margin-bottom: 0
                    background-color: white
                    display: inline-block;
                    float: left;
                    clear: both
                p.subtitle
                    font-size: font-size-small
                    color: font-color2
                    background-color: white
                    display: inline-block;
                    float: left;
                    clear: both
