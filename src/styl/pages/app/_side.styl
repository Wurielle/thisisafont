.landing-right
    position: relative;
    height: 100%
    left: 500px
    width: -webkit-calc(100% - 500px)
    width: calc(100% - 500px)
    padding: 30px 0 30px 30px
    .landing-text
        h2
            font-weight: 300
            font-size: font-size-biggest
            color: font-color3
        h3
            font-size: font-size-smaller
            text-transform: uppercase;
        p
            color: font-color2
            &.up
                text-transform: uppercase
                font-size: font-size-smaller
        a
            color: font-color2
            border-bottom: 1px dotted font-color2
            text-transform: uppercase
            font-size: font-size-smallest
        &.type-2
            h2
                color: white
                background-color: pink
                font-weight: 700
                font-size: font-goliath
